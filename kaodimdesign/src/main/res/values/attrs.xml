<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SearchBox">
        <attr name="hint" format="string" />
        <attr name="nextButton" format="boolean" />
    </declare-styleable>

    <declare-styleable name="NumericControl">
        <attr name="value" format="integer" />
        <attr name="min" format="integer" />
        <attr name="max" format="integer" />
    </declare-styleable>

    <declare-styleable name="DateTimePicker">
        <attr name="pickerHint" format="string" />
        <attr name="curvedEffect" format="boolean" />
        <attr name="cyclicEffect" format="boolean" />
        <attr name="atmosphericEffect" format="boolean" />
        <attr name="displayTime" format="boolean" />
        <attr name="displayDate" format="boolean" />
    </declare-styleable>

    <declare-styleable name="InteractivePanel">
        <attr name="panelHint" format="string" />
        <attr name="borderType" format="enum">
            <enum name="dotted" value="1" />
            <enum name="line" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="TermsBar">
        <attr name="titleText" format="string" />
        <attr name="termsText" format="string" />
        <attr name="privacyText" format="string" />
    </declare-styleable>

    <declare-styleable name="PricingBottomBar">
        <attr name="title" format="string" />
        <attr name="btnText" format="string"/>
        <attr name="pricing" format="string"/>
    </declare-styleable>

    <declare-styleable name="MobileInputMockLayout">
        <attr name="mockHint" format="string" />
    </declare-styleable>

    <declare-styleable name="MobileInputLayout">
        <attr name="inputHint" format="string" />
        <attr name="inputHintTitle" format="string" />
    </declare-styleable>

    <declare-styleable name="FacebookButton">
        <attr name="fbHint" format="string" />
    </declare-styleable>

    <declare-styleable name="PasswordField">
        <attr name="passwordHintTitle" format="string" />
    </declare-styleable>

    <declare-styleable name="NotesStandard">
        <attr name="notesText" format="string" />
        <attr name="notesType" format="string">
            <enum name="no_button" value="1" />
            <enum name="single_button" value="2" />
            <enum name="double_button" value="3" />
            <enum name="no_icon" value="4" />
            <enum name="only_primary_text" value="5" />
        </attr>
        <attr name="notesIconDrawable" format="integer"/>
        <attr name="btnSingleText" format="string"/>
        <attr name="btnDoublePrimaryText" format="string"/>
        <attr name="btnDoubleSecondaryText" format="string"/>
        <attr name="notesSecondary" format="string"/>
        <attr name="showNotesSecondary" format="boolean"/>
    </declare-styleable>

</resources>