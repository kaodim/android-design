<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rlServiceRebook"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:visibility="gone"
    app:cardCornerRadius="8dp"
    app:cardElevation="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal"
        android:background="@color/kaodim_orange_20">

        <TextView
            android:id="@+id/tvRequestAgain"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:maxWidth="150dp"
            android:textColor="@color/text_black"
            android:text="@string/request_again_label"
            style="@style/font_roboto_medium" />

        <RelativeLayout
            android:id="@+id/rlRequestAgainBtn"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:minWidth="110dp">


            <Button
                android:layout_centerInParent="true"
                android:id="@+id/btnRequestAgain"
                style="@style/font_roboto_medium"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:minWidth="110dp"
                android:background="@drawable/button_jasper"
                android:clickable="true"
                android:enabled="true"
                android:focusable="true"
                android:visibility="visible"
                android:stateListAnimator="@null"
                android:textSize="14sp"
                android:text="@string/request_again"
                android:textColor="#ffffff" />

            <RelativeLayout
                android:layout_width="105dp"
                android:layout_height="34dp"
                android:id="@+id/bookTopProgress"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:background="@color/kaodim_red"
                android:gravity="center">

                <ProgressBar
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:indeterminateTint="@color/white"
                    />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>



