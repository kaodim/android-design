<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4">

    <ImageView
        android:id="@+id/selectionMinusWithEditText"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/minus" />

    <EditText
        android:layout_toEndOf="@+id/selectionMinusWithEditText"
        android:id="@+id/etNumericDisplayWithEditText"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:enabled="true"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerVertical="true"
        style="@style/font_roboto_regular"
        android:gravity="center"
        android:background = "@drawable/bg_edittext_default"
        android:textSize="16sp"
        android:inputType="number"
        android:maxLines="1"
        android:text="1"
        android:cursorVisible="true"/>

    <ImageView
        android:id="@+id/selectionAddWithEditText"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_toEndOf="@+id/etNumericDisplayWithEditText"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:src="@drawable/add" />

</RelativeLayout>