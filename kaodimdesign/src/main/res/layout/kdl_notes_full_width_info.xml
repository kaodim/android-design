<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_notes_full_width">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="12.76dp"
            android:layout_height="18.15dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/ic_bulb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/jasper"
                android:lineSpacingMultiplier="1.30"
                android:textSize="@dimen/size_12"
                style="@style/font_roboto_medium"
                android:visibility="visible"
                android:layout_marginBottom="3dp"
                android:text="This is an example Title"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/kdl_grey_dark"
                android:lineSpacingMultiplier="1.30"
                android:layout_marginTop="2dp"
                android:textSize="@dimen/size_12"
                style="@style/font_roboto_regular"
                android:visibility="visible"
                android:text="This is an example of a notes with very long multi line message"/>

        </LinearLayout>
    </LinearLayout>




</LinearLayout>