<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_card_sharp_nopad">

        <LinearLayout
            android:id="@+id/llCountryCodeSelector"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFlag"
                android:layout_width="30dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_flag_my" />

            <TextView
                android:id="@+id/tvCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:text="(+60)"
                android:textColor="@color/blackpearl"
                android:textSize="@dimen/size_14" />

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/itvDropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:text="{fa-sort-down}"
                android:textColor="@color/dark_blue"
                android:textSize="16sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlMobileViewTouchArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/llCountryCodeSelector"
            android:layout_toRightOf="@+id/llCountryCodeSelector"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:gravity="end"
                android:hint="@string/enter_mobile_number"
                android:textSize="@dimen/size_14" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>