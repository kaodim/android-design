<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llUpfrontPayment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/kaodim_blue_10"
    android:gravity="center_vertical">

    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/kaodim_blue"/>

    <TextView
        android:id="@+id/tvPrimaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/kaodim_blue_helptext"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        tools:text="Pay the upfront amount now to get RM20 off your final amount"
        />

</LinearLayout>