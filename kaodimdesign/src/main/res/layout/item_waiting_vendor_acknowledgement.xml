<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ackBar"
    android:visibility="gone"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/rlServiceDiscontinued"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/kaodim_orange_20"
        app:cardElevation="20dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/shadow_bg_90" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:padding="18dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/waiting_for_payment_acknowledgement"
                android:textColor="@color/text_black"
                android:layout_gravity="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvVendorNameAck"
                style="@style/font_roboto_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:maxLines="1"
                tools:text="Koolzlink Engineering" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>