<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/reviewBar"
    android:visibility="gone"
    app:cardElevation="20dp"
    app:cardCornerRadius="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/kaodim_orange_20"
        android:layout_height="72dp">

        <TextView
            android:id="@+id/tvSubmitReview"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:maxWidth="150dp"
            android:textColor="@color/text_black"
            android:text="@string/how_was_your_experience"
            style="@style/font_roboto_medium" />


        <Button
            android:layout_centerInParent="true"
            android:id="@+id/btnSubmitReview"
            style="@style/font_roboto_medium"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:minWidth="110dp"
            android:background="@drawable/button_jasper"
            android:clickable="true"
            android:enabled="true"
            android:focusable="true"
            android:visibility="visible"
            android:stateListAnimator="@null"
            android:textSize="14sp"
            android:text="@string/submit_a_review"
            android:textColor="#ffffff" />

    </RelativeLayout>


</android.support.v7.widget.CardView>



